<%- include("../partials/header") %>

<div class="container">

  <h2>Create New Reservation. Hello <%=  name %></h2>

  
<form action="/reservations" method="POST" >
        <div class="form-group">
          <label for="location">Location</label>
          <input type="text" class="form-control" name="location" placeholder="Enter location">
        </div>

        <div class="form-group">
                <label for="numberOfCustomer">Number of people</label>
                <input type="number" class="form-control" name="numberOfCustomer" placeholder="Enter numberOfCustomer">
        </div>

        <div class="form-group">
                <label for="time">Time</label>
                <input type="text" class="form-control" name="time" placeholder="Enter Time">
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

    </div>



<%- include("../partials/footer") %>
